<html>
<head>
  <title>Modify Product</title>
  <link href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h3>Add Product</h3>
    <form class="form-horizontal" action="/product/modify" method="POST">
      <input type="hidden" name="id" value=<%- id %>>
      
      <div class="form-group">
        <label class="form-label col-sm-3">Name:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" placeholder="name" name="name" value=<%- product.name %>>
        </div>
      </div>

      <div class="form-group">
        <label class="form-label col-sm-3">Price:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" placeholder="price" name="price" value=<%- product.price %>>
        </div>
      </div>

      <div class="form-group">
        <label class="form-label col-sm-3">Category:</label>
        <div class="col-sm-9">
          <select class="form-control" name="cid" value=<%- product.cid %>>
            <% categories.forEach(function(category) { %>
              <option value=<%- category._id %>><%- category.name %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Modify</button>
    </form>
  </div>
        <!-- jQuery (Bootstrap 的 JavaScript 插件需要引入 jQuery) -->
        <script src="https://code.jquery.com/jquery.js"></script>
        <!-- 包括所有已编译的插件 -->
        <script src="js/bootstrap.min.js"></script>
</body>
</html>
